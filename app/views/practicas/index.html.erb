<% @practicas.each do |practica| %>
  <tr class="<%= cycle('odd','pair') %>">
    <td><%=h practica.fecha_dil %></td><!--
    <td><#%=h practica.grupos %></td>
    <td><#%=h practica.nom_grup %></td>
    <td><#%=h practica.comunidades %></td>
    <td><#%=h practica.nom_com %></td>
    <td><#%=h practica.sitios %></td>
    <td><#%=h practica.nom_sit %></td>-->
    <td><%=h practica.practicas %></td>
    <td><%=h practica.donde_pract %></td>
    <td><%=h practica.participacion %></td>
    <td><%=h practica.area_part %></td>
    <td><%= link_to 'Ver', aprendiz_practica_path(@aprendiz, practica) %></td>
    <td><%= link_to 'Editar', edit_aprendiz_practica_path(@aprendiz, practica) %></td>
    <td><%= link_to 'Destruir', aprendiz_practica_path(@aprendiz, practica), :confirm => 'Esta seguro?', :method => :delete %></td>
    <td><%= link_to 'F.Academica', practica_academicos_path(practica) %></td>
    <td><%= link_to 'Alternativas', practica_alternativas_path(practica) %></td>
    <td><%= link_to 'Fortalezas', practica_fortalezas_path(practica) %></td>
    <td><%= link_to 'Herramientas', practica_herramientas_path(practica) %></td>
  </tr>
<% end %>
</table>
