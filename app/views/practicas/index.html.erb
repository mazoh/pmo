    <th id="titul">Esta realizando practicas </th>
    <th id="titul">Donde practica</th>
    <th id="titul">Desea Participar en proyectos</th>
    <th id="titul">Area de participacion</th>
    <th id="titul" colspan="7">Opciones</th>
  </tr>
