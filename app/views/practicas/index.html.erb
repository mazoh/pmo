    <td><h1>Practicas de: <%= @aprendiz.nombre %></h1></td>
  </tr>
</table>

<div id="wrapper">
  <div id="scroll">
    <div id="scrollcontent">
<table id="tab">
  <tr>
    <th id="titul">Fecha de diligencia</th><!--
    <th id="titul">Grupo</th>
    <th id="titul">Nombre del grupo</th>
    <th id="titul">Comunidad</th>
    <th id="titul">Nombre de la comunidad</th>
    <th id="titul">Sitio</th>
