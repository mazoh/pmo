<table style=" width: 900px; ">
  <tr>
    <td style="width: 380px "><h1>Proyectos en los que desearia participar:</h1></td>
    <td style="text-align:center; "><h2><%= @docente.nombres %></h2></td>
    <td colspan="2" style="width:230px ; text-align: right ; padding-bottom: 15px; padding-top: 15px">
     <% form_tag docente_lineas_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Buscar", :name => nil %>
     <% end %>
    </td>
  </tr>
</table>

<div id="wrapper">
  <div id="scroll">
    <div id="scrollcontent">
      <table id="tab">
        <tr>
          <th id="titul">Nombre</th>
          <th id="titul">Descripcion</th>
          <th id="titul" colspan="3">Opciones</th>
        </tr>
        <tr id="vac"></tr>

        <% @lineas.each do |linea| %>

         <tr id="mayus" class="<%= cycle('odd','pair') %>">
          <td><%=h linea.nombre %></td>
          <td><%=h linea.descripcion %></td>
          <td><%= link_to 'Ver', docente_linea_path(@docente, linea) %></td>
          <td><%= link_to 'Editar', edit_docente_linea_path(@docente, linea) %></td>
          <td><%= link_to 'Destruir', docente_linea_path(@docente, linea), :confirm => 'Esta Seguro?', :method => :delete %></td>
        </tr>
        <% end %>
      </table>
      <br />
    </div>
    <div id="scrollbar">
      <div id="scroller" class="scroller"></div>
    </div>
  </div>
</div>

<script type="text/javascript">
TINY.scroller.init('scroll','scrollcontent','scrollbar','scroller','buttonclick');
</script>

<table style="width: 900px; margin: auto; text-align: center; padding: 20px">
  <tr>
    <td>
      <%= link_to 'Nuevo proyecto', new_docente_linea_path %>
      <%= link_to 'Atras', docentes_path %>
    </td>
  </tr>
</table>