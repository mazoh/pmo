<h1>Editar area</h1>

<% form_for(@area) do |f| %>
  <%= f.error_messages %>
<%= render :partial => 'form', :locals => { :f => f } %>

<table style="width: 900px; margin: auto; text-align: center; padding: 20px">
  <tr>
    <td>
      <%= f.submit 'Actualizar' %><% end %> |
      <%= link_to 'Ver', @area %> |
      <%= link_to 'Atras', areas_path %>
    </td>
  </tr>
</table>