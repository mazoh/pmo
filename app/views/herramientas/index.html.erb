<table style=" width: 900px">
  <tr>
    <td><h1>Lista de herramientas</h1></td>
    <td style="width:230px ; text-align: right ">
     <% form_tag practica_herramientas_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Buscar", :name => nil %>
     <% end %>
    </td>
  </tr>
</table>

<div id="wrapper">
  <div id="scroll">
    <div id="scrollcontent">

<table id="tab">
  <tr>
    <th id="titul">Nombre</th>
    <th id="titul">Descripcion</th>
    <th id="titul" colspan="3">Opciones</th>
  </tr>
  <tr id="vac"></tr>

<% @herramientas.each do |herramienta| %>
  <tr id="mayus" class="<%= cycle('odd','pair') %>">
    <td><%=h herramienta.nombre %></td>
    <td><%=h herramienta.descripcion %></td>
    <td><%= link_to 'Ver', practica_herramienta_path(@practica, herramienta) %></td>
    <td><%= link_to 'Editar', edit_practica_herramienta_path(@practica, herramienta) %></td>
    <td><%= link_to 'Destruir', practica_herramienta_path(@practica, herramienta), :confirm => 'Esta Seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

    </div>
    <div id="scrollbar">
      <div id="scroller" class="scroller"></div>
    </div>
  </div>
</div>

<script type="text/javascript">
TINY.scroller.init('scroll','scrollcontent','scrollbar','scroller','buttonclick');
</script>

<table style="width: 900px; margin: auto; text-align: center; padding: 20px">
  <tr>
    <td>
      <%= link_to 'Nueva herramienta', new_practica_herramienta_path %> |
      <%= link_to 'Atras', programas_path %>
    </td>
  </tr>
</table>