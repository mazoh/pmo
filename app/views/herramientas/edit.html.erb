<h1>Editar herramienta</h1>

<% form_for([@practica, @herramienta]) do |f| %>
  <%= f.error_messages %>
<%= render :partial => 'form', :locals => { :f => f } %>

<table style="width: 900px; margin: auto; text-align: center; padding: 20px">
  <tr>
    <td>
      <%= f.submit 'Actualizar' %><% end %> |
      <%= link_to 'Ver', practica_herramienta_path(@herramienta) %> |
      <%= link_to 'Atras', practica_herramientas_path(@practica) %>
    </td>
  </tr>
</table>