<h1>Editar idioma</h1>

<% form_for(@idioma) do |f| %>
  <%= f.error_messages %>
<%= render :partial => 'form', :locals => { :f => f } %>

<table style="width: 900px; margin: auto; text-align: center; padding: 20px">
  <tr>
    <td>
      <%= f.submit 'Actualizar' %> <% end %> |
      <%= link_to 'Ver', @idioma %> |
      <%= link_to 'Atras', idiomas_path %>
    </td>
  </tr>
</table>