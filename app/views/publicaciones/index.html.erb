<table style=" width: 900px; ">
  <tr>
    <td style="width: 380px "><h1>Publicaciones de:</h1></td>
    <td style="text-align:center; "><h2><%= @docente.nombres %></h2></td>
    <td colspan="2" style="width:230px ; text-align: right ; padding-bottom: 15px; padding-top: 15px">
     <% form_tag docente_publicaciones_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Buscar", :name => nil %>
     <% end %>
    </td>
  </tr>
</table>

<div id="wrapper">
  <div id="scroll">
    <div id="scrollcontent">

<table id="tab">
  <tr>
    <th id="titul">Autor</th>
    <th id="titul">Titulo publicacion</th>
    <th id="titul">Tipo publicacion</th>
    <th id="titul">Ano</th>
    <th id="titul">Referencia</th>
    <th id="titul" colspan="3">Opciones</th>
  </tr>
  <tr id="vac"></tr>

<% @publicaciones.each do |publicacion| %>
  <tr id="mayus" class="<%= cycle('odd','pair') %>">
    <td><%=h publicacion.autor %></td>
    <td><%=h publicacion.titulo_publicacion %></td>
    <td><%=h publicacion.tipo_publicacion %></td>
    <td><%=h publicacion.ano %></td>
    <td><%=h publicacion.referencia %></td>
    <td><%= link_to 'Ver', docente_publicacion_path(@docente, publicacion) %></td>
    <td><%= link_to 'Editar', edit_docente_publicacion_path(@docente, publicacion) %></td>
    <td><%= link_to 'Destruir', docente_publicacion_path(@docente, publicacion), :confirm => 'Esta Seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>
    <div id="scrollbar">
      <div id="scroller" class="scroller"></div>
    </div>
  </div>
</div>

<script type="text/javascript">
TINY.scroller.init('scroll','scrollcontent','scrollbar','scroller','buttonclick');
</script>

<table style="width: 900px; margin: auto; text-align: center; padding: 20px">
  <tr>
    <td>
      <%= link_to 'Nueva publicacion', new_docente_publicacion_path %>
      <%= link_to 'Atras', docentes_path %>
    </td>
  </tr>
</table>