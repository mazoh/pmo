<table style=" width: 900px;">
  <tr>
    <td><h1 >Lista de programas</h1></td>
    <td style="width:230px ; text-align: right ">
     <% form_tag programas_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Buscar", :name => nil, :title => "Buscar programa por nombre" %>
     <% end %>
    </td>
  </tr>
</table>

<div id="wrapper">
  <div id="scroll">
    <div id="scrollcontent">

<table id="tab">
  <tr>
    <th id="titul">Nombre Del Programa</th>
    <th id="titul" colspan="4">Opciones</th>
  </tr>
  <tr id="vac"></tr>
  
<% @programas.each do |programa| %>
  <tr class="<%= cycle('odd','pair') %>">
    <td id="mayus"><%=h programa.nombre %></td>
    <td><%= link_to 'Ver', programa %></td>
    <td><%= link_to 'Editar', edit_programa_path(programa) %></td>
    <td><%= link_to 'Destruir', programa, :confirm => 'Esta Seguro?', :method => :delete %></td>
    <td><%= link_to 'Lista De Fichas', programa_fichas_path(programa) %></td>
  </tr>
<% end %>
</table>
</div>
    <div id="scrollbar">
      <div id="scroller" class="scroller"></div>
    </div>
  </div>
</div>

<script type="text/javascript">
TINY.scroller.init('scroll','scrollcontent','scrollbar','scroller','buttonclick');
</script>

<table style="width: 900px; margin: auto; text-align: center; padding: 20px">
  <tr>
    <td>
      <%= link_to 'Nuevo programa', new_programa_path %>
      <%= link_to 'Atras', uno_inicios_path %>
    </td>
  </tr>
</table>