<div id="wrapper">
  <div id="scroll">
    <div id="scrollcontent">
      <table style="border: 1px dotted; width: 500px; margin: auto; padding: 10px; text-transform: capitalize ">
        <tr>
          <td style="background: #666; color:#fff; padding: 10px; font-weight: bold;" colspan="2"> Datos </td>
        </tr>
        <tr>
          <td>&nbsp;</td>
        </tr>
        <tr class="odd" >
          <td id="tede1"><%= f.label :titulo %></td>
          <td><%= f.text_field :titulo %></td>
        </tr>
        <tr class="pair" >
          <td id="tede1"><%= f.label :centro %></td>
          <td><%= f.text_field :centro %></td>
        </tr>
        <tr class="odd" >
          <td id="tede1"><%= f.label :ciudad_id %></td>
          <td><%= f.collection_select :ciudad_id, Ciudad.all, :id, :nombre%></td>
        </tr>
        <tr class="pair" >
          <td id="tede1"><%= f.label :estado %></td>
          <td><%= select(:academico,
             :estado, { "Terminado" => "Terminado",
                      "En Curso" => "En Curso",
                      "Suspendido" => "Suspendido" }) %></td>
        </tr>
      </table>
    </div>
    <div id="scrollbar">
      <div id="scroller" class="scroller"></div>
    </div>
  </div>
</div>

<script type="text/javascript">
TINY.scroller.init('scroll','scrollcontent','scrollbar','scroller','buttonclick');
</script>